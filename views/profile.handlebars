<div class="form_section">


<div class="card box" style="width: 18rem;">
<h5 class="card-title">Your Profile</h5>
<form action="/update_profile" method="POST" class="edit-profile">

    <div class="form-group">
        <label for="exampleInputName">Name</label>
        <input type="text" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Enter Your Name" name="name" value="{{profile.name}}" required>
    </div>
    <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Your Email" name="email" value="{{profile.email}}" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPhone">Phone</label>
        <input type="text" maxlength="10" class="form-control" id="exampleInputPhone" placeholder="Enter Your Phone" name="phone" value="{{profile.phone}}" required>
    </div>
    <div class="form-group">
        <label for="exampleInputAge">Age</label>
        <input type="text" class="form-control" id="exampleInputAge" placeholder="Enter Your Age" name="age" value="{{profile.age}}" required>
      
    </div>
  
  <div class="form-btn">
      <button type="submit" class="btn btn-primary secondary-btn">Save</button>
      <button onclick="location.href='/change_pwd'" type="button" class="btn btn-primary secondary-btn"> Change Password</button>
      
      
  </div>
  
</form>

</div>


</div>